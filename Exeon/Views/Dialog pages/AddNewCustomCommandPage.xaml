<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Exeon.Views.Dialog_pages.AddNewCustomCommandPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Exeon.Views.Dialog_pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="10">

            <TextBox
                Width="300"
                Text="{x:Bind ViewModel.NewCustomCommandCommandText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                PlaceholderText="Введіть команду тригер..."/>

            <Button
                Height="30"
                Width="30"
                Style="{ThemeResource AccentButtonStyle}">

                <Viewbox Margin="-5">
                    <SymbolIcon
                        Symbol="Add"/>
                </Viewbox>
            </Button>
        </StackPanel>

        <ListView
            Margin="0,15,0,0"
            ItemTemplate="{StaticResource TriggerCommandItemTemplate}"
            SelectionMode="None"
            Height="100"
            Grid.Row="1">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListBoxItem/>
            <ListBoxItem/>
            <ListBoxItem/>
            <ListBoxItem/>
            <ListBoxItem/>
            <ListBoxItem/>
        </ListView>
    </Grid>
</Page>
